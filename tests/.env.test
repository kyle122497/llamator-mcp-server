# Timeouts (seconds)
LLAMATOR_MCP_TEST_HTTP_TIMEOUT_S=1200
LLAMATOR_MCP_TEST_READY_TIMEOUT_S=3
LLAMATOR_MCP_TEST_READY_INTERVAL_S=0.25

# MCP
LLAMATOR_MCP_TEST_MCP_PROTOCOL_VERSION=2025-03-26

# Optional API key for protected HTTP/MCP endpoints.
# If empty, auth header is not sent by tests.
LLAMATOR_MCP_TEST_API_KEY=LLAMATOR_MCP_API_KEY

# Test run request defaults
LLAMATOR_MCP_TEST_PRESET_NAME=owasp:llm10
LLAMATOR_MCP_TEST_NUM_THREADS=1

# Reports
LLAMATOR_MCP_TEST_ENABLE_REPORTS=false

# Tested model config for request payload
LLAMATOR_MCP_TEST_TESTED_KIND=openai
LLAMATOR_MCP_TEST_TESTED_BASE_URL=http://host.docker.internal:1234/v1
LLAMATOR_MCP_TEST_TESTED_MODEL=llm
LLAMATOR_MCP_TEST_TESTED_API_KEY=lm-studio

# Optional override: run integration tests against an already deployed service.
# If set, tests will use this base URL instead of http://localhost:<LLAMATOR_MCP_HTTP_PORT>.
# Example:
# LLAMATOR_MCP_TEST_BASE_URL=